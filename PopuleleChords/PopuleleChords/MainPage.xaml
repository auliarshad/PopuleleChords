<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PopuleleChords"
             x:Class="PopuleleChords.MainPage">

    <ListView x:Name="ChordList" HasUnevenRows="False" Margin="10" >
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ContentView Content="{Binding FretGrid}" HorizontalOptions="Start" VerticalOptions="Start" Margin="10" />
                        <Label Text="{Binding Name}" Grid.Column="1" FontAttributes="Bold" FontSize="Large"  VerticalTextAlignment="Center" />
                        <Label Text="{Binding Notes}" Grid.Column="2" FontAttributes="Italic" FontSize="Micro" VerticalTextAlignment="Center" Margin="10, 0, 0, 0" />
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>
